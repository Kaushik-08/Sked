<% if @post.files.any? %>
  <h3> Attachments : </h3>
  <ul>
  <% @post.files.each do |file| %>
  <%= image_tag file %>
  <li>
     <% link_to file.filename, rails_blob_path(file, disposition: :attachment) %>
     <%= link_to 'Remove', delete_file_post_url(file.id), method: :delete, data: {confirm: 'Are you sure?'} %>
     </li>
     </ul>
     <%end%>
